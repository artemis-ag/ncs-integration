#!/usr/bin/env ruby

require 'bundler/setup'
require 'yaml'

# $spec_credentials = YAML.load_file('./spec/spec_OR_credentials.yml')
$spec_credentials = YAML.load_file('./spec/test_credentials.yml')

require 'CCA'

CCA.configure do |config|
  config.api_key  = $spec_credentials['api_key']
  config.sandbox  = $spec_credentials['sandbox']
  config.state    = $spec_credentials['state']
end


$client = CCA::Client.new(debug: true, user_key: $spec_credentials['user_key'])

require "pry"
Pry.start
